{
	"manifest_version": 2,

	"name": "IncogSwitch",
	"description": "Quickly switch the current window between normal and incognito mode.",
	"version": "1.1",
	"icons": { "16": "icon16.png",
			   "48": "icon48.png",
			  "128": "icon128.png" },

	"permissions": [
		"tabs"
	],

	"browser_action": {
		"default_icon": "icon19.png"
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}